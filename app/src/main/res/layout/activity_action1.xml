<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ActionActivity1">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal" android:gravity="bottom|center" tools:ignore="UselessParent">
            <Button
                    android:text="@string/cancelar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" android:id="@+id/cancelButton" tools:text="Cancelar"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" android:gravity="center" tools:ignore="UselessParent">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText" android:layout_weight="1"/>
            <Button
                    android:text="@string/ok"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" android:id="@+id/submitButton"/>
        </LinearLayout>

    </LinearLayout>
</layout>